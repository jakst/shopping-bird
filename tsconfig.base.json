{
	"compilerOptions": {
		"composite": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"emitDeclarationOnly": true,
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "bundler",

		// Strictness
		"strict": true,
		"forceConsistentCasingInFileNames": true
	}
}
