{
	"name": "shopping-bird",
	"private": true,
	"packageManager": "yarn@3.4.1",
	"engines": {
		"node": "18.x"
	},
	"workspaces": {
		"packages": [
			"packages/*"
		]
	},
	"scripts": {
		"app": "yarn workspace app",
		"server": "yarn workspace server",
		"lib": "yarn workspace lib",
		"format": "prettier --cache --write .",
		"lint": "yarn eslint -f unix .",
		"tc": "yarn tsc -b",
		"check": "yarn tc && yarn lint",
		"clean": "git clean -xfd packages -e packages/app/.env -e packages/server/.env && yarn"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.53.0",
		"@typescript-eslint/parser": "^5.53.0",
		"eslint": "^8.34.0",
		"prettier": "^2.8.4",
		"turbo": "^1.8.2",
		"typescript": "^4.9.5"
	},
	"resolutions": {
		"solid-start@^0.2.20": "patch:solid-start@npm%3A0.2.20#./.yarn/patches/solid-start-npm-0.2.20-1c62718646.patch",
		"@panva/hkdf@^1.0.2": "patch:@panva/hkdf@npm%3A1.0.2#./.yarn/patches/@panva-hkdf-npm-1.0.2-ea4c380608.patch"
	}
}
