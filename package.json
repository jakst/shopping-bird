{
	"name": "shopping-bird",
	"private": true,
	"packageManager": "pnpm@8.6.7",
	"engines": {
		"node": "18.x"
	},
	"scripts": {
		"app": "pnpm --filter app",
		"server": "pnpm --filter server",
		"lib": "pnpm --filter lib",
		"format": "rome format --write .",
		"lint": "pnpm eslint -f unix .",
		"tc": "pnpm tsc -b",
		"check": "pnpm tc && pnpm lint",
		"clean": "git clean -xfd node_modules packages -e packages/app/.env -e packages/server/.env && pnpm install"
	},
	"devDependencies": {
		"@total-typescript/ts-reset": "^0.4.2",
		"@typescript-eslint/eslint-plugin": "^5.57.1",
		"@typescript-eslint/parser": "^5.57.1",
		"eslint": "^8.44.0",
		"prettier": "^2.8.7",
		"rome": "^12.1.3",
		"turbo": "^1.10.7",
		"typescript": "^5.1.6"
	},
	"pnpm": {
		"patchedDependencies": {
			"@opentelemetry/resources@1.15.0": "patches/@opentelemetry__resources@1.15.0.patch",
			"@motionone/solid@10.16.2": "patches/@motionone__solid@10.16.2.patch"
		}
	}
}
